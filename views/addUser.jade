extends layout

block content
  div
    form(action='/addUser',method='post')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='name') name
          input(id='name',name='name',type='text',value='',placeholder='')
      div#passworddiv(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='password') password
          input(id='password',name='password',type='password',value='',placeholder='')
      div(data-role='fieldcontain')   
        input(type='submit',value='Sign Up',data-transition='fade', data-theme='c')  